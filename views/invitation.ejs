<%- include('./public/header', {
plugin: ['http://static.huoxing24.com/assets/swiper.min.css'],
private: ['./css/invitation.css']
}) %>

<div class="inv-header">
    <div class="container clearfix">
        <div class="inv-header-con">
            <ul class="tagList clearfix">
                <% for( let i = 0; i < article_info.user_info.recent_topics.length;i++ ) { let item = article_info.user_info.recent_topics[i] %>
                <li>
                    <a href="javascript:;"><%= item %></a>
                </li>
                <% } %>
            </ul>


            <div class="article-context">
                <h2>
                    <%= article_info.title %>
                </h2>
                <div class="text">
                    <p><%= article_info.message %></p>
                </div>
                <% if(article_info.message.length > 75){ %>
                <p class="unfold">展开阅读全文 <i class="iconfont icon-open"></i></p>
                <% } %>
            </div>
            <div class="control clearfix" data-id=<%= article_info.id %>>
                <button type="button" class="reply">回复</button>
                <button type="button" class="collect">收藏</button>
                <button type="button" class="share">
                    <i class="iconfont icon-fenxiang"></i>分享
                </button>
            </div>
        </div>
        <div class="inv-header-stat">
            <div class="stat-item">
                <p class="stat-item-title">关注者</p>
                <p><%= article_info.views %></p>
            </div>
            <div class="part-line"></div>
            <div class="stat-item">
                <p class="stat-item-title">浏览量</p>
                <p><%= article_info.views %></p>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="inv-content clearfix">
        <div class="inv-content-l">
            <div class="inv-content-reply">
                <div class="replier clearfix">
                    <div class="replier-img">
                        <img src=<%= article_info.user_info.avatar_file %> alt="">
                    </div>
                    <div class="replier-info">
                        <h3><%= article_info.user_info.user_name %></h3>
                        <p>原新东方名师，自称‘中国比特币首富’,著名天使投资人...</p>
                    </div>
                </div>
