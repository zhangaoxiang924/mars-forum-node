                        <div class="reply-action" data-uid=<%= item.uid %>>
                            <p>
                                <i class="iconfont icon-yk_shijian_fill"></i>
                                发布时间： <%= (function () {
                                    let minus = new Date().getTime() / 1000 - item.add_time;
                                    let day = Math.floor(minus / (3600 * 24));
                                    let hour = Math.floor((minus - day * 3600 * 24) / 3600);
                                    let minute = Math.floor((minus - day * 3600 * 24 - hour * 3600) / 60);

                                    return day ? `${day}天${hour}小时${minute}分` : (hour ? `${hour}小时${minute}分` : `${minute}分`);
                                })() %> 钟前
                            </p>
                            <button type="button" class="btn btn-action">
                                <i class="iconfont icon-dianzan"></i>
                                <%= item.votes %>
                            </button>
                            <button type="button" class="btn btn-action">
